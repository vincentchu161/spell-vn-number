    "regenerator-runtime": "^0.14.1",
    "rimraf": "^5.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.4",
    "webpack": "^5.99.5",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": [
    "> 0.25%",
